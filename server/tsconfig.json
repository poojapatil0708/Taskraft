{
    "compilerOptions": {
        "module": "commonjs",
        "types": ["node"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es6"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    }
}